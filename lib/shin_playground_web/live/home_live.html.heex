<.navbar />

<%= if @live_action == :oidc do %>
  <.live_component module={OIDCActionComponent} id="oidc" />
<% end %>

<%= if @live_action == :saml do %>
  <.live_component
    saml_xml={@saml_xml}
    decoded_saml={@decoded_saml}
    form={@form}
    type={@type}
    malformed_xml_error={@malformed_xml_error}
    module={SAMLActionComponent}
    id="saml"
  />
<% end %>
